extends default

block content
  div.container

  table
    thead
        tr
          th Source
          th Show
          th Like
          th Score
          th Date 
          th link
          th title
          th description
        - var i=0;
        tbody
          each item, i in articlelist
            tr(class=(i % 2 == 0) ? 'odd' : 'even')
              td=item.source
              td
                a(href=`/articlez?cmd=hd&id=${item._id}`) #{item.show}
              td
                a(href=`/articlez?cmd=lk&id=${item._id}`) #{item.like}
              td=item.score
              td=item.pubDate
              td
                a(href=item.link target="_blank") link 
              td #{item.title}
              td #{item.description}
