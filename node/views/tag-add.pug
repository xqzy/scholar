extends default

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1 Add a tag
                    div.account-wall
                        img(class='profile-img', src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
                        form(class='form-signin', action='/addtag', method='POST')
                            input(type='text', namelabel='username' class='form-control', placeholder='label',required, autofocus)
                            input(type='text', name='searchString' class='form-control', placeholder='searchstring (can use regexp)', required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Add Tag
                            span.clearfix
                    
                    #message
                    if message
                        h1.text-center.error-message #{message}