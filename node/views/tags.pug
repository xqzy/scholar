extends default

block content
  div.container
  table
    meta(content='text/html', charset='utf-8')
    thead
        tr
          th Tag
          th Like
          th Recent Hits
          th Total # Articles
        - var i=0;
        tbody
          each tag, i in taglist
            tr(class=(i % 2 == 0) ? 'odd' : 'even')
              td(width='25px')
                a(href=`/articlez?cmd=ftag&id=${tag.label}`) #{tag.label}
              td
                if(authenticated)
                  if (tagsliked.includes(tag.label))
                    a(href=`/tags?cmd=utag&id=${tag.label}`)
                      i.fa.fa-heart
                  else
                    a(href=`/tags?cmd=ltag&id=${tag.label}`)
                      i.fa.fa-heart-o  
              td #{tag.recenthits}
              td #{tag.hits}